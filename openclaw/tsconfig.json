{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "lib": ["ES2022"],
    "outDir": "dist",
    "rootDir": "src",
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "declaration": false,
    "sourceMap": true,
    "noImplicitAny": false,
    "types": [],
    "typeRoots": []
  },
  "include": ["src/**/*"],
  "exclude": ["dist", "node_modules"]
}
